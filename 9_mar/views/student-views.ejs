    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student</title>
</head>

<body>
    <div>
        <form action="/createForm" method="post">
            <label>Enter Your Name</label>
            <input type="text" name="name">
            <label>Enter Class and Section</label>
            <input type="text" name="classSection">
            <label>Enter Roll NO.</label>
            <input type="text" name="roll_no">
            <label>Enter Subjects</label>
            <input type="text" name="subjects">
            <button type="submit">Submit</button>
        </form>
    </div>

    <div>
        <form action="/displayData" method="get">
            <button>See Details Of All Students</button>
        </form>
    </div>

    <div>
        <form action="/updateData" method="post">
            <label>Enter Your Name</label>
            <input type="text" name="name">
            <label>Enter Class and Section</label>
            <input type="text" name="classSection">
            <label>Enter Roll NO.</label>
            <input type="text" name="roll_no">
            <label>Enter Subjects</label>
            <input type="text" name="subjects">
            <button type="submit">Update Data</button>
        </form>
    </div>

    <div>
        <form action="/deleteData" method="post">
            <input type="text" name="roll_no">
            <button>Delete Data</button>
        </form>
    </div>
